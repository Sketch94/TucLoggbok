<Window x:Class="TucLoggbok.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TucLoggbok"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal"
        MouseDown="Window_MouseDown"
        MinHeight="400" MinWidth="800" 
        WindowStartupLocation="CenterScreen"
        Title="Inloggningsfönster - Kunskapskällan" Icon="pack://application:,,,/TucLoggBok;component/Media/Icons/loginPage_Icon.png">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" MinHeight="77" />
                <RowDefinition Height="85*" />
                <RowDefinition Height="70*"/>
                <RowDefinition Height="156*"/>
                <RowDefinition Height="64*"/>
            </Grid.RowDefinitions>


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="3" FontSize="30" FontFamily="Poppins" Height="45" Width="180">Välkommen</TextBlock>

            <!-- Admin-inloggningsfält med flexibel positionering -->
            <TextBox Name="UsernameTextBox" TextChanged="UsernameTextBox_TextChanged" Style="{StaticResource RoundedTextBox}"  VerticalAlignment="Top" HorizontalAlignment="Center"  FontFamily="Poppins" Width="120"  Grid.Row="2" Grid.Column="1" Height="25"/>
            <PasswordBox Name="UserPassword" Style="{StaticResource RoundedPasswordBox}" VerticalAlignment="Bottom" HorizontalAlignment="Center"  FontFamily="Poppins" Width="120" KeyDown="Userpassword_KeyDown" Grid.Row="2" Grid.Column="1" Height="25"/>
            <TextBox Name="UserPasswordTextBox" Style="{StaticResource RoundedTextBox}" VerticalAlignment="Bottom" HorizontalAlignment="Center"  FontFamily="Poppins" Width="120" Grid.Row="2" Grid.Column="1" Height="25" Visibility="Collapsed"/>

            <ToggleButton x:Name="ShowUserPasswordToggle" Style="{StaticResource ToggleButtonHover}" Width="20" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,0"  Grid.Row="1" Grid.Column="1" Height="20" ToggleButton.Checked="ShowUserPasswordToggle_Checked" ToggleButton.Unchecked="ShowUserPasswordToggle_UnChecked" Grid.RowSpan="2"  >
                <Image x:Name="UserEyeIcon" Source="pack://application:,,,/TucLoggBok;component/Media/Buttons/eye_closed.png"/>
            </ToggleButton>

            <!-- Användarinloggningsfält -->
            <TextBox Name="AdminUsernameTextBox" TextChanged="AdminTextBox_TextChanged" Style="{StaticResource RoundedTextBox}" VerticalAlignment="Top" HorizontalAlignment="Center"  FontFamily="Poppins" Width="120" Grid.Row="2" Grid.Column="3" Height="25"/>
            <PasswordBox Name="AdminPassword" Style="{StaticResource RoundedPasswordBox}"  VerticalAlignment="Bottom" HorizontalAlignment="Center" FontFamily="Poppins" Width="120" KeyDown="Adminpassword_KeyDown" Grid.Row="2" Height="25" Grid.Column="3" />
            <TextBox Name="AdminPasswordTextBox" Style="{StaticResource RoundedTextBox}"  VerticalAlignment="Bottom" HorizontalAlignment="Center"  FontFamily="Poppins" Width="120" Grid.Row="2" Grid.Column="3" Height="25" Visibility="Collapsed"/>

            <ToggleButton x:Name="ShowAdminPasswordToggle" Style="{StaticResource ToggleButtonHover}" Width="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="20" Grid.Row="2" Grid.Column="3" ToggleButton.Checked="ShowAdminPasswordToggle_Checked" ToggleButton.Unchecked="ShowAdminPasswordToggle_UnChecked" >
                <Image x:Name="AdminEyeIcon" Source="pack://application:,,,/TucLoggBok;component/Media/Buttons/eye_closed.png"/>
            </ToggleButton>

            <!-- Administratör inloggning -->
            <Button Name="AdminLoginButton" Content="Fortsätt som Administratör"  VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10" Click="AdminLogin_Click" FontFamily="Poppins" Height="40" IsEnabled="False" Width="175" Grid.Row="3" Grid.Column="3"/>
            <!-- Användare inloggning -->
            <Button Name="UserLoginButton" Content="Fortsätt som Användare" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10" Width="175" Click="UserLogin_Click" FontFamily="Poppins" IsEnabled="False" Height="40" Grid.Row="3" Grid.Column="1" />

            <!-- Admin profilbild -->
            <Border Name="AdminProfileIcon" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="50" IsEnabled="False" Focusable="False">
                <Image Name="AdminProfileImage" Source="pack://application:,,,/TucLoggBok;component/Media/Administrator/user.png" />
            </Border>
            <Button Name="AdminEditProfile" Style="{StaticResource EditButtonHover}" Grid.Row="0" Grid.Column="3" Cursor="Arrow" Click="AdminEdit_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="30" Height="30" Margin="0,0,40,0">
                <Image Source="pack://application:,,,/TucLoggBok;component/Media/Administrator/cogwheel.png" />
            </Button>

            <!-- Användare profilbild -->
            <Border Name="UserPofileIcon" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="50" IsEnabled="False" Focusable="False" >
                <Image Name="UserProfileImage" Source="pack://application:,,,/TucLoggBok;component/Media/Users/user.png"/>
            </Border>
            <Button x:Name="UserEditProfile" Style="{StaticResource EditButtonHover}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,0" Width="30" Height="30" Cursor="Arrow" Click="UserEdit_Click" Grid.Row="0" Grid.Column="1">
                <Image Source="pack://application:,,,/TucLoggBok;component/Media/Users/cogwheel.png" />
            </Button>

            <!-- Inte registrerad -->
            <Button Name="NotRegisteredButton" Grid.Row="4" Grid.Column="2" Content="Inte registrerad?" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="120" Click="NotRegistered_Click"/>

        </Grid>
    </Border>
</Window>


    
