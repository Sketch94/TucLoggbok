<Window x:Class="TucLoggbok.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TucLoggbok"
      mc:Ignorable="d" 
      WindowStyle="SingleBorderWindow"
      FontFamily="poppins"
      MinHeight="500" MinWidth="900"
      SizeToContent="WidthAndHeight"
      MouseDown="Window_MouseDown"
      Title="Registreringssida - Kunskapskällan" Icon="pack://application:,,,/TucLoggBok;component/Media/Icons/registration_Icon.png">

    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="190*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBlock Text="Användarnamn" FontWeight="Bold" Margin="5,80,0,0" Grid.Column="0" VerticalAlignment="Top" Height="18" FontSize="14"/>
            <TextBox x:Name="UsernameTextBox" TextChanged="UsernameTextBox_Changed" Style="{StaticResource RoundedTextBox}" Grid.Column="0" Margin="5,100,0,0" Width="250" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top"/>

            <TextBlock Text="Lösenord" FontWeight="Bold" Margin="5,130,0,0" Grid.Column="0" VerticalAlignment="Top" Height="16" FontSize="14"/>
            <PasswordBox x:Name="RegisterPasswordTextBox" Style="{StaticResource RoundedPasswordBox}" Grid.Column="0" Margin="5,150,0,0" Width="250" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top">

                <PasswordBox.ToolTip>
                    <ToolTip BorderBrush="Gray" BorderThickness="2" HorizontalOffset="400" Placement="Center">
                        Kom ihåg ditt lösenord, det är genererat slumpmässigt och kan inte återställas.
                    </ToolTip>
                </PasswordBox.ToolTip>
                
            </PasswordBox>

            <TextBox Name="RegisterTextBox" Style="{StaticResource RoundedTextBox}" Margin="5,150,0,0" Width="250" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Visibility="Collapsed"/>


            <ToggleButton x:Name="ShowRegisterPasswordToggle" Style="{StaticResource ToggleButtonHover}" Width="20" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="260,155,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" ToggleButton.Checked="ShowRegisteredPasswordToggle_Checked" ToggleButton.Unchecked="ShowRegisteredPasswordToggle_UnChecked"  >
                <Image x:Name="RegisterEyeIcon" Source="pack://application:,,,/TucLoggBok;component/Media/Buttons/eye_closed.png"/>
            </ToggleButton>


            <TextBlock Text="Email" FontWeight="Bold" Margin="5,180,0,0" Grid.Column="0" VerticalAlignment="Top" Height="16" FontSize="14"/>
            <TextBox x:Name="EmailTextBox" Style="{StaticResource RoundedTextBox}" Grid.Column="0" Margin="5,200,0,0" Width="250" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top"/>

            <TextBlock Text="Telefon" FontWeight="Bold" Margin="5,230,0,0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="18" Width="72" FontSize="14"/>
            <TextBox x:Name="PhoneTextBox" Style="{StaticResource RoundedTextBox}" Grid.Column="0" Margin="5,250,0,0" Width="250" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top">
                <TextBox.ToolTip>
                    <ToolTip BorderBrush="Gray" BorderThickness="2" HorizontalOffset="300" Placement="Center">
                        Format: +46(0)70-384-2976
                    </ToolTip>
                </TextBox.ToolTip>
            </TextBox>

            
            <TextBlock Text="Användare" FontWeight="Bold" Margin="5,280,0,0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="19" Width="82" FontSize="14"/>
            <RadioButton x:Name="UserRadioButton" FontWeight="Bold" Margin="5,300,0,0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="18"  Width="15" Checked="UserRadioButton_Checked"/>

            <TextBlock Text="Admin" FontWeight="Bold" Margin="100,280,0,0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="19" Width="56" FontSize="14"/>
            <RadioButton x:Name="AdminRadioButton" FontWeight="Bold" Margin="100,300,0,0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="18"  Width="15" Checked="AdminRadioButton_Checked"/>


            <Button Content="Registrera dig" Grid.Column="0" Margin="5,336,0,0" Width="120" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Registration_Click" Height="26"/>

            <Button Grid.Column="0" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Cursor="Hand" Height="40" Width="40" Click="HomeButton_Click">
                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Buttons/Home.png"/>
            </Button>


        </Grid>
    </Border>
</Window>
