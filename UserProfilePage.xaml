<Window x:Class="TucLoggbok.UserProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TucLoggbok"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        SizeToContent="WidthAndHeight"
        Title="Användarprofil - Kunskapskällan" MinWidth="600" MinHeight="500" ResizeMode="NoResize" Icon="pack://application:,,,/TucLoggBok;component/Media/Icons/editProfilePic_Icon.png" >
    
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="434*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="333*"/>
            </Grid.RowDefinitions>

            <StackPanel Height="348" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="Välj ikon" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Poppins"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300" CanContentScroll="True" Width="300" >
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="35" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user1.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="35" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user2.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>

                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="35" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user3.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="35" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user4.png" Stretch="UniformToFill" Margin="-1,-2,0,0"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="35" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user5.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="35" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user6.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="35" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user7.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>

                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="0" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user8.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="0" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user9.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="0" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user10.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10" Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="0" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user11.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                        <Button Margin="10"  Width="70" Height="70" Click="ProfileIcon_Click">
                            <Border BorderBrush="black" BorderThickness="2" CornerRadius="0" Width="60" Height="60">
                                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Users/user12.png" Stretch="UniformToFill"/>
                            </Border>
                        </Button>
                    </WrapPanel>

                </ScrollViewer>
            </StackPanel>

            <Button Grid.Column="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" Cursor="Hand" Height="40" Width="40" Click="HomeButton_Click">
                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Buttons/Home.png"/>
            </Button>

        </Grid>
    </Border>
</Window>
