<Window x:Class="TucLoggbok.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TucLoggbok"
      mc:Ignorable="d" 
      WindowStyle="SingleBorderWindow"
      MouseDown="Window_MouseDown"
      MinHeight="750"  MinWidth="1000"
      Title="Administratör - Kunskapskällan" Icon="pack://application:,,,/TucLoggBok;component/Media/Icons/User_Icon.png">

    <Border BorderThickness="0" BorderBrush="#CCCCCC" Background="White" Padding="20">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="260"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto" MinWidth="340"/>
            </Grid.ColumnDefinitions>

            <Border>
                <Image Name="AdminProfileImage" Stretch="UniformToFill"/>
            </Border>

            <!-- Knappar -->
            <Button Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Cursor="Hand" Height="40" Width="40" Click="HomeButton_Click">
                <Image Source="pack://application:,,,/TucLoggbok;component/Media/Buttons/Home.png"/>
            </Button>

            <Border Grid.Row="1" Grid.Column="1" CornerRadius="5" Padding="5" Margin="15,0,15,0" BorderThickness="2" BorderBrush="DimGray">
                <StackPanel>
                    <Label Content="Lägg till en ny bok" FontSize="20" FontFamily="Poppins" FontWeight="DemiBold" HorizontalContentAlignment="Center" FontStyle="Italic" />
                    <TextBox x:Name="TitleTextBox" Style="{StaticResource RoundedTitleTextBox}" Width="200" Margin="0,20,0,0" />
                    <TextBox x:Name="AuthorTextBox" Style="{StaticResource RoundedAuthorTextBox}"  Width="200" Margin="0,10,0,0"/>
                    <TextBox x:Name="ISBNTextBox" Style="{StaticResource RoundedISBNTextBox}"  Width="200" Margin="0,10,0,0" />
                    <TextBox x:Name="StatusTextBox" Style="{StaticResource RoundedStatusTextBox}" Width="200" Margin="0,10,0,0"/>
                    <Button Content="Lägg till bok" Margin="0,10,0,0" HorizontalAlignment="Center" Width="110" Click="AddBook_Click" FontFamily="Poppins" Height="40"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="1" Padding="5" CornerRadius="5" BorderThickness="2" BorderBrush="DimGray" Margin="15,10,15,0" >
                <WrapPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Width="170" Height="280">
                        <Button Content="Redigera bok" Margin="0,60,0,0" HorizontalAlignment="Center" Width="110" Height="40" Click="EditBook_Click" FontFamily="Poppins" />
                        <Button Content="Uppdatera logg" Margin="0,60,0,0" FontFamily="Poppins" Click="UpdateLog_Click" Width="110" Height="40" />
                    </StackPanel>

                    <StackPanel Width="170" Height="280">
                        <Button Content="Radera logg" Margin="0,60,0,0" Width="110" Height="40" Click="ClearLog_Click" FontFamily="Poppins"/>
                        <Button Content="Radera bok" Margin="0,60,0,0" Width="110" Height="40" Click="DeleteBook_Click" KeyDown="LoanHistoryListBox_KeyDown">
                            <Button.ToolTip>
                                <ToolTip>
                                    Håll ned Ctrl och välj flera böcker.
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>
                </WrapPanel>
            </Border>
            
            <!-- Logg-datafältet, storlek justerad proportionellt med fönstret -->
            <ListBox x:Name="LoanHistoryListBox" SelectionMode="Extended" Style="{StaticResource RoundedListBox}" Focusable="False" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"/>
            <TextBlock x:Name="WelcomeMessageTextBlock" Text="Välkommen" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,0,0,0" FontSize="20" FontFamily="Poppins" Height="32" Width="450" Grid.ColumnSpan="2"/>
            <TextBox x:Name="SearchTextBox" Style="{StaticResource RoundedSearchTextBox}" Grid.Column="1" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,95,20" KeyDown="SearchTextBox_KeyDown" />
            <Button Content="Sök"  Grid.Column="1" Width="50" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15,0,0,20" Click="SearchBook_Click" />
            <Button Content="Visa lånehistorik" Grid.Row="0" Grid.Column="0" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,17" Click="ShowLoanHistory_Click" Height="70"/>


        </Grid>
    </Border>
</Window>
