<Window x:Class="TucLoggbok.EditBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TucLoggbok"
        mc:Ignorable="d"
        Title="Bokredigering - Kunskapskällan" Height="450" Width="650" Icon="pack://application:,,,/TucLoggBok;component/Media/Icons/editbook_Icon.png">
    <Grid>

        <Border Grid.Row="1" Grid.Column="1" CornerRadius="15" Padding="15" Margin="15" BorderThickness="2" BorderBrush="DimGray">
            <StackPanel>
                <Label Content="Här kan du redigera boken" FontSize="20" FontFamily="Poppins" FontWeight="DemiBold" HorizontalContentAlignment="Center" FontStyle="Italic" />
                <TextBox x:Name="NewTitleTextBox" Style="{StaticResource RoundedUpdatedTitleTextBox}" Width="200" Margin="0,20,0,0" />
                <TextBox x:Name="NewAuthorTextBox" Style="{StaticResource RoundedUpdatedAuthorTextBox}"  Width="200" Margin="0,10,0,0"/>
                <TextBox x:Name="NewISBNTextBox" Style="{StaticResource RoundedUpdatedISBNTextBox}"  Width="200" Margin="0,10,0,0" />
                <TextBox x:Name="NewStatusTextBox" Style="{StaticResource RoundedUpdatedStatusTextBox}" Width="200" Margin="0,10,0,0"/>
                <Button Content="Lägg till redigerad bok" Margin="0,10,0,0" HorizontalAlignment="Center" Width="160" Click="AddUpdatedBook_Click" FontFamily="Poppins" Height="40"/>
            </StackPanel>
        </Border>


    </Grid>
</Window>
